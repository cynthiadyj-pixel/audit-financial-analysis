import pandas as pd
import numpy as np

# 1. 加载数据
# 建议直接读取 01 脚本处理好的合并文件，如果没有，则执行以下合并
income = pd.read_csv("../data/income_statement.csv")
balance = pd.read_csv("../data/balance_sheet.csv")
cashflow = pd.read_csv("../data/cash_flow_statement.csv")

# 合并数据并清理重复列
financials = income.merge(balance, on="Year", how="inner") \
                   .merge(cashflow, on="Year", how="inner", suffixes=('', '_dup'))
financials = financials.filter(regex='^(?!.*_dup)')
financials = financials.sort_values("Year").reset_index(drop=True)

# --- 2. 财务比率计算 (核心修正部分) ---

# 毛利率 (Gross Margin): 衡量盈利能力
# 注意：确保你的 CSV 列名是 Revenue 和 Cost，如果不是请手动修改下方括号内的名称
financials["Gross_Margin"] = (financials["Revenue"] - financials["Cost"]) / financials["Revenue"]

# 资产负债率 (Debt Ratio): 衡量长期偿债风险
financials["Debt_Ratio"] = financials["Total_Liabilities"] / financials["Total_Assets"]

# 应收账款周转率 (AR Turnover): 审计重点，检查是否存在虚假销售或回收风险
# 使用 np.where 防止分母为 0 导致报错
financials["AR_Turnover"] = np.where(
    financials["Accounts_Receivable"] != 0,
    financials["Revenue"] / financials["Accounts_Receivable"],
    0
)

# 存货周转率 (Inventory Turnover): 衡量营运效率
financials["Inventory_Turnover"] = np.where(
    financials["Inventory"] != 0,
    financials["Cost"] / financials["Inventory"],
    0
)

# 经营现金流对净利润比率 (OCF to Net Profit): 审计核心，检查利润质量
financials["OCF_to_NetProfit"] = financials["Operating_Cash_Flow"] / financials["Net_Profit"]

# --- 3. 结果整理与输出 ---

# 选择需要显示的列，方便审计观察
analysis_columns = [
    "Year", "Gross_Margin", "Debt_Ratio", 
    "AR_Turnover", "Inventory_Turnover", "OCF_to_NetProfit"
]

print("--- 财务比率分析结果 ---")
print(financials[analysis_columns])

# 保存结果供后续审计报告使用
financials.to_csv("../data/financial_analysis_results.csv", index=False)
