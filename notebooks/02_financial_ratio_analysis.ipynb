# Audit Risk Identification and Response
# Based on financial ratio & trend analysis
import pandas as pd

# Load three core financial statements
income = pd.read_csv("../data/income_statement.csv")
balance = pd.read_csv("../data/balance_sheet.csv")
cashflow = pd.read_csv("../data/cash_flow_statement.csv")

# Merge data by Year, sort and reset index
financials = income.merge(balance, on="Year") \
                   .merge(cashflow, on="Year") \
                   .sort_values("Year") \
                   .reset_index(drop=True)

# Calculate key financial ratios for audit risk analysis
financials["Gross_Margin"] = (financials["Revenue"] - financials["Cost"]) / financials["Revenue"]  # Profitability
financials["AR_Turnover"] = financials["Revenue"] / financials["Accounts_Receivable"]  # AR collectability
financials["OCF_to_NetProfit"] = financials["Operating_Cash_Flow"] / financials["Net_Profit"]  # Profit quality

# Show merged data with calculated ratios (base for risk analysis)
financials

# Calculate year-on-year change of key ratios (for trend risk)
financials["GM_YoY_Change"] = financials["Gross_Margin"].pct_change()  # Gross Margin YoY
financials["AR_Turnover_YoY_Change"] = financials["AR_Turnover"].pct_change()  # AR Turnover YoY
financials["OCF_Profit_YoY_Change"] = financials["OCF_to_NetProfit"].pct_change()  # OCF to Net Profit YoY

# Filter high-risk years (example: GM drop >20% or AR Turnover drop >15%)
high_risk_years = financials[
    (financials["GM_YoY_Change"] < -0.2) | 
    (financials["AR_Turnover_YoY_Change"] < -0.15)
]

# Show high-risk years and related indicators (direct for audit)
print("=== High Risk Years for Audit ===")
print(high_risk_years[["Year", "Gross_Margin", "AR_Turnover", "OCF_to_NetProfit"]])
